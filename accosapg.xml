<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="2.5.0" method="upgrade" group="hikashoppayment">
	<name>Accosapg Payment Plugin for Hikashop</name>
	<creationDate>November 2015</creationDate>
	<author>OpenSource Technologies</author>
	<copyright>Copyright (C) 2009 - 2016 OpenSource Technologies. All rights reserved.</copyright> 
	<license>GNU General Public License version 2 or later</license> 
	<authorEmail>sales@opensourcetechnologies.com</authorEmail> 
	<authorUrl>http://www.opensourcetechnologies.com</authorUrl>
	<version>1.1.0</version>
	<description>This plugin enables you to setup your Accosapg payment system</description>
	<files>
		<filename plugin="accosapg">accosapg.php</filename>
		<filename>accosapg_configuration.php</filename>
		<filename>accosapg_end.php</filename>
	</files>
	<params addpath="/components/com_hikashop/params">
		<param name="pluginoptions" type="pluginoptions" default="plugin" label="hikashop" description="HikaShop options" />
	</params>
	<config>
		<fields name="params" addfieldpath="/components/com_hikashop/fields">
			<fieldset name="basic">
				<field id="pluginoptions" name="pluginoptions" type="pluginoptions" label="hikashop" description="HikaShop options" />
			</fieldset>
		</fields>
	</config>
</extension>
